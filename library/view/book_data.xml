<odoo>
    <record id="book_data_view" model="ir.ui.view">
        <field name="name">Book Data View</field>
        <field name="model">book.data</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="book_type" placeholder="Type Of Book"/>
                    <field name="book_name" placeholder="Enter Book Name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="book_data_tree_view" model="ir.ui.view">
        <field name="name">Book Data Tree View</field>
        <field name="model">book.data</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="book_type" placeholder="Type Of Book"/>
                    <field name="book_name" placeholder="Enter Book Name"/>
            </tree>
        </field>
    </record>
    <record id="action_book_data" model="ir.actions.act_window">
        <field name="name">Book Data</field>
        <field name="res_model">book.data</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>